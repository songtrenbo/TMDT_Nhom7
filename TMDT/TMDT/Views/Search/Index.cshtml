                    else
                    {<span class="rating-number">Chưa có đánh giá</span>}
                </div> <span class="buy" onclick="location.href='@url'">Mua ngay</span>
            </div>
        </div>*@
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <p>Không tìm thấy sản phẩm</p>
        }
    </div>
</div>


<script src="./scripts.js"></script>


