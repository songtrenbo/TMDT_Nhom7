@model TMDT.Models.NguoiDung

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

@using (Html.BeginForm("ForgetPassword", "NguoiDung", new { @urlstr = Request.Url.Authority.ToString() }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h4 class="title-form">Quên mật khẩu</h4>

        <div class="form-group">
            <p class="control-label">Nhập Email của bạn: </p>
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation" })
                @if (ViewBag.Email != null)
                {
                    <div class="alert">@ViewBag.Email</div>
                }
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Quên mật khẩu" class="btn btn-primary" style="margin-left: auto; width: 100%;" />
            </div>
            <div>
                <a href="@Url.Action("DangNhap","NguoiDung")" class="text-white" style="width:100%; margin-left: auto;font-size:16px">Đăng nhập</a>
            </div>
        </div>
    </div>

    
</div>
            


}

