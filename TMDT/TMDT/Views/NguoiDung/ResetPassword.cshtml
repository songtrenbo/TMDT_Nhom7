@model TMDT.Models.NguoiDung

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutPageMain.cshtml";
}

@using (Html.BeginForm("ResetPassword", "NguoiDung", new { maNguoiDung = ViewBag.maNguoiDung}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4"></div>
        <div class="form-login col-md-4">
            <h4 class="font-aqua font-18 title-form">Thay đổi mật khẩu</h4>
            @Html.ValidationSummary(true, "", new { @class = "validation" })

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation" })
                    <p class="validation">@ViewBag.WrongNewPassword</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPass, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Lưu mật khẩu" class="btn btn-primary" style="margin-left: auto; width: 100%;" />
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
