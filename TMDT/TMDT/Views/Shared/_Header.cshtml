<header>
    <!-- Navbar-->
    <div class="navbar" style="background-color: #EE0033;">

        <div class="container justify-content-between">
            <!-- Left elements -->
            <div class="d-flex">
                <!-- Brand -->
                <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="#">
                    <img src="~/Content/images/logodps.png" height="40" alt="" loading="lazy" style="margin-top: 2px;" />
                </a>
                <!-- Search form -->
                <div class="form-group has-search mb-3 w-auto my-auto d-none d-sm-flex">
                    <span class="fa fa-search form-control-feedback"></span>
                    <input type="text" class="form-control" placeholder="Search" style="border-radius: 90px; width: 400px;">
                </div>
                <!-- Actual search box -->
            </div>
            <!-- Left elements -->
            <!-- Right elements -->
            <ul class="navbar-nav flex-row">
                <li class="nav-item">
                    <button class="btn" style="color: white;"><i class="bi bi-house-door-fill" style="font-size: 1.2em;"></i> Trang chủ</button>
                </li>
                <li class="nav-item">
                    <button class="btn" style="color: white;"><i class="bi bi-cart4" style="font-size: 1.2em;color: white;"></i> Giỏ hàng (0)</button>
                </li>
                <li class="nav-item dropdown">
                    @if (Session["NguoiDung"] == null)
                    {
                        <button class="btn" style="color: white;" onclick="location.href='@Url.Action("Index", "NguoiDung")'"><i class="bi bi-person-circle" style="font-size: 1.2em;color: white;"></i> Đăng nhập</button>
                    }
                    else
                    {
                        @*<button class="btn" style="color: white;" onclick="location.href='@Url.Action("Index", "NguoiDung")'"><i class="bi bi-person-circle" style="font-size: 1.2em;color: white;"></i> @Session["NguoiDung"]</button>*@


                        <button class="btn nav-link dropdown-toggle" id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style="color: white;"><i class="bi bi-person-circle" style="font-size: 1.2em;color: white;"></i> @Session["NguoiDung"]</button>
                        <div class="dropdown-menu" aria-labelledby="dropdown">
                            <a class="dropdown-item" href="@Url.Action("XemThongTinCaNhan","NguoiDung",new {id= Session["id"]})">Xem thông tin cá nhân</a>
                            @if (int.Parse(Session["maQuyen"].ToString()) == 2)
                            {
                                <a class="dropdown-item" href="@Url.Action("Index","Admin")">Admin</a>
                            }
                            <a class="dropdown-item" href="@Url.Action("LogOutUser","NguoiDung")">Đăng xuất</a>
                        </div>

                    }
                </li>

            </ul>
            <!-- Right elements -->
        </div>
    </div>
    <!-- Navbar -->

</header>