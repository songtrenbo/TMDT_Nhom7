<header>

    <style>
        nav > li > a, nav > li > a:focus, nav > li > a:focus:hover {
            text-decoration: none;
            background-color: transparent !important;
            color: white;
            
        }

        .navbar-nav {
            margin-left: auto;
        }
        .navbar-nav> .nav-item:hover {
            border-radius: 10px;
            background-color: #A10022;
            transition: all 0.3s ease 0s;
        }
    </style>


    <script src="~/Scripts/funcGiohang.js"></script>

    <nav class="navbar navbar-expand-xl navbar-dark fixed-top" style="background-color: #EE0033;">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "TrangChu")"><img src="~/Content/images/logodps.png" height="35" alt="" loading="lazy" /></a>
            <div class="form-group has-search mb-3 w-auto my-auto d-none d-sm-flex">
                <span class="fa fa-search form-control-feedback"></span>
                <input type="text" class="form-control" placeholder="Search" style="border-radius: 90px; width: 400px;">
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse navbar-nav ml-auto" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item text-a">
                        <a class="nav-link text-white" href="@Url.Action("Index", "TrangChu")">
                            <i class="bi bi-house-door-fill" style="font-size: 1.2em;"></i>Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white MainGioHang" style="cursor: pointer;" onload="GetSoSP()" onclick="GioHangPage()">
                            <i class="bi bi-cart4" style="font-size: 1.2em;"></i>
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        @if (Session["NguoiDung"] == null)
                        {
                            <a class="nav-link text-white" style="cursor: pointer;" onclick="location.href='@Url.Action("DangNhap", "NguoiDung")'">
                                <i class="bi bi-person-circle" style="font-size: 1.2em;color: white;"></i> Đăng nhập
                            </a>
                        }
                        else
                        {
                            <a class="nav-link text-white dropdown-toggle btn" id="navbarDropdownMenuLink" data-toggle="dropdown">
                                <i class="bi bi-person-circle" style="font-size: 1.2em"></i> Hi @Session["ten"]
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="@Url.Action("ThongTinCaNhan","NguoiDung",new {id= Session["id"]})">Thông tin cá nhân</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("DangXuat","NguoiDung")">Đăng xuất</a>
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>

    </nav>
    <div style="margin-top: 70px"></div>
</header>
