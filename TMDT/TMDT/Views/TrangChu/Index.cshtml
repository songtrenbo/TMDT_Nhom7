                        </div>
                    }
                </div>
                <button class="btn btn-primary leftLst"><i class="bi bi-caret-left-fill"></i></button>
                <button class="btn btn-primary rightLst"><i class="bi bi-caret-right-fill"></i></button>
            </div>
        </div>
    </div>
</div>



<br />
<h4 style="margin-top:2%">Danh sách laptop</h4>


<div class="row" style="margin:10px">
    @{
        int count = 0;
        foreach (var item in Model)
        {
            if (count > 12)
            {
                break;
            }

            <div class="col-6 col-md-4 col-lg-3">
                <div class="card card-hover" style=" margin-top:20px">
                    <img src="@item.Hinh" alt="Alternate Text" style="height:55%; overflow:hidden" />
                    <div class="card-body" style="width: 100%">
                        <p class="card-text">
                            @item.TenSanPham
                        </p>
                        @if (@item.GiaGiam > 0)
                        {
                            <p><del>@item.GiaBan VNĐ</del></p>
                            <p> @item.GiaGiam VNĐ</p>
                        }
                        else
                        {
                            <p><br /></p>
                            <p> @item.GiaBan VNĐ</p>
                        }
                        <button class="btn-buy" onclick="location.href='@Url.Action("CT_SanPham", "SanPham",new { MaSanPham = item.MaSanPham})'">
                            Mua ngay
                        </button>
                    </div>
                </div>
            </div>
            count++;
        }
    }
</div>

