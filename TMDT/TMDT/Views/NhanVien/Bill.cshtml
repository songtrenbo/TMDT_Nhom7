@model IEnumerable<TMDT.Models.CTHoaDon>
@using TMDT.Models

@{
    ViewBag.Title = "Test";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />

@{
    HoaDon DonHang = (HoaDon)ViewData["DonHang"];
    NguoiDung nguoiDung = (NguoiDung)ViewData["NguoiDung"];
    int i = 1;
    foreach (var item in Model)
    {
        item.STT = i;
        i++;
    }
}
<img src="~/Content/images/logodps.png" width="150px" />"
<h3 style="text-align:center">PHIẾU MUA HÀNG</h3>
<div class="row" style="height:auto">
    <div class="col-sm-6">
        <p class="card-text">Tên khách hàng: <span style="font-weight:500">@nguoiDung.Ten</span></p>
        <p class="card-text">Số điện thoại: <span style="font-weight:500">@nguoiDung.SDT</span> </p>
        <p class="card-text">Địa chỉ: <span style="font-weight:500">@nguoiDung.DiaChi</span></p>
    </div>
    <div class="col-sm-6" style="text-align:right">
        <p class="card-text">Ngày mua: <span style="font-weight:500">@DonHang.NgayMua</span></p>
        <p class="card-text">Số hóa đơn: <span style="font-weight:500">@DonHang.MaHoaDon</span> </p>
        <p class="card-text">Đơn vị tiền tệ: <span style="font-weight:500">VNĐ</span></p>
    </div>
</div>
<table class="table">
    <tr>
        <th style="text-align:center">STT</th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Đơn giá
        </th>
        <th style="text-align:center">Số lượng</th>
        <th>Thành tiền</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.STT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)

            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
        </tr>}
    <tr>
        <td colspan="4" style="text-align:right">Tổng tiền:</td>
        <td><div style="font-weight:500">@DonHang.TongThanhToan</div></td>
    </tr>
</table>
