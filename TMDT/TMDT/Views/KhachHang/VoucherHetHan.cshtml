@model IEnumerable<TMDT.Models.NguoiDung_PhieuQuaTang>

@{
    ViewBag.Title = "VoucherHetHan";
    Layout = "~/Views/Shared/_LayoutCaNhan.cshtml";
}

<div class="container-fluid">
    <div class="row" style="height:500px">
        @{
            foreach (var item in Model)
            {
                <div class="col col-md-6">
                    <div class="card">
                        <div class="main">
                                    <div class="co-img">
                                        @if (ViewBag.ThuongHieu.Count == 0)
                                        {
                                            <img src="~/Content/images/voucher_logo.png"
                                                 alt="" />
                                        }
                                        @{
                                            int count = 0;
                                            foreach (var i in ViewBag.ThuongHieu)
                                            {
                                                if (item.PhieuQuaTang.LoaiPhamVi == i.MaThuongHieu)
                                                {

                                                    <img src="@i.Hinh"
                                                         alt="" />
                                                    count++;
                                                    break;
                                                }
                                            }
                                            if (count == 0)
                                            {
                                                <img src="~/Content/images/voucher_logo.png"
                                                     alt="" />
                                            }
                                        }
                                    </div>
                            <div class="vertical"></div>
                            <div class="content">
                                <h2>@item.PhieuQuaTang.TenPhieuQuaTang</h2>
                                <h1>@item.PhieuQuaTang.GiaTri <span>VNĐ</span></h1>
                                <p>Đã hết hạn</p>
                                <br />
                            </div>
                        </div>
                        <div class="copy-button">
                            <p>Mã voucher:  **********</p>
                            @*<button onclick="copyToClipboard('@item.MaPhieuQuaTang')" class="btn btn-danger">Sao chép</button>*@

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>


