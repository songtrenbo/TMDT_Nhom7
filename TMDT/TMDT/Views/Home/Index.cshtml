<h4 style="margin-top:2%">Thương hiệu</h4>

<!-- Top content -->

<div class="container-fluid" style="background-color:#EE0033; padding:10px">
    <div class="top-content">
        <div class="container-fluid">
            <div id="carousel-example" class="carousel slide" data-ride="carousel" data-interval="false">
                <div class="carousel-inner carousel-inners2 row w-100 mx-auto" role="listbox" style="height:200px;">
                    @foreach (var item in ViewBag.thuonghieu)
                    {
                        <div class="carousel-item carousel-i col-12 col-sm-6 col-md-4 col-lg-3 @if( item.MaThuongHieu == 1) {<text>active</text>} img-thumbnail" style="height:200px;">
                            <a href="#"><img src="@item.Hinh" class="img-fluid mx-auto d-block" style="height:200px"></a>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>



<br />
<h4 style="margin-top:2%">Danh sách laptop</h4>


<div class="row" style="margin:10px">
    @{
        int count = 0;
        foreach (var item in Model)
        {
            if (count > 12)
            {
                break;
            }

            <div class="col-6 col-md-4 col-lg-3">
                <div class="card card-hover" style=" margin-top:20px">
                    <img src="@item.Hinh" alt="Alternate Text" style="height:55%; overflow:hidden" />
                    <div class="card-body" style="width: 100%">
                        <p class="card-text">
                            @item.TenSanPham
                        </p>
                        <p> @item.GiaBan VNĐ</p>

                        <button class="btn-buy" onclick="location.href='@Url.Action("CT_SanPham", "SanPham",new { MaSanPham = item.MaSanPham})'">
                            Mua ngay
                        </button>
                    </div>
                </div>
            </div>
            count++;
        }
    }
</div>

